@using University.Models
@model System.Collections.Generic.List<Course>

<table class="table">
  <thead>
    <tr>
      <th>Listing ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="5">No Courses Yet</td></tr>
    }

    @foreach (Course item in Model)
    {
      <tr>
        <td>@item.Label</td>
        <td>@item.Name</td>
        <td>
          <div class="d-flex justify-content-end">
            <a
              asp-action="Details"
              asp-route-courseId="@item.Id"
              class="btn btn-secondary mx-1"
            >See Details</a>
            <a
              asp-action="Remove"
              asp-route-courseId="@item.Id"
              class="btn btn-danger mx-1"
            >Delete</a>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>